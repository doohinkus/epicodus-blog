<div class="post-tile">
    <h2>
      {{post.title}}
    </h2>
    <img src={{post.image}} alt={{post.title}} />
    <p>
      {{post.body}}
    </p>
    <div class="admin">
      <button class="btn btn-warning" {{action 'edit' post}}>Edit</button>
      <button class="btn btn-danger" {{action 'delete' post}}>Delete</button>
    </div>
</div>
